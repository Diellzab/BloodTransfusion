<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.fiek.transfuzioni_gjakut.Home">

    <ImageView
        android:id="@+id/imgViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wall1"
        android:background="@color/redwall"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnHomeLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redwall"
            android:text="Login"
            />

        <Button
            android:id="@+id/btnHomeSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redwall"
            android:text="Sign up"/>



    </LinearLayout>





</RelativeLayout>
