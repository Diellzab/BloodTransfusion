<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Admin_registration"
    android:orientation="vertical"
    android:background="@drawable/background_layout"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backleft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/backleft"
            android:layout_marginLeft="0dp"/>

        <TextView
            android:id="@+id/titleDepoist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Register an Admin"
            android:textSize="28sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/blue5"
            android:layout_marginLeft="20dp" />
    </LinearLayout>
    
    



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:padding="15dp"
        android:background="@drawable/edittext"
        android:id="@+id/etName"
        android:hint="First Name"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textCapWords"
        android:imeOptions="actionNext"></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="15dp"
        android:hint="Last Name"
        android:background="@drawable/edittext"
        android:id="@+id/etSurname"
        android:inputType="textCapWords"
        android:imeOptions="actionNext"></EditText>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/etAddress"
        android:background="@drawable/edittext"
        android:padding="15dp"
        android:hint="Address"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textCapWords"
        android:imeOptions="actionNext"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/etMail"
        android:background="@drawable/edittext"
        android:padding="15dp"
        android:hint="Email Address"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/etUsername"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext"
        android:hint="Username"
        android:padding="15dp"
        android:layout_marginLeft="20dp"
        android:inputType="text"
        android:imeOptions="actionNext"></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:background="@drawable/edittext"
        android:padding="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textPassword"
        android:imeOptions="actionDone"></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="22sp"
        android:fontFamily="@font/rajdhani_semibold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="right"
        android:background="@drawable/other_button"
        android:textColor="@color/blue4"
        android:id="@+id/btnRegister"></Button>

</LinearLayout>