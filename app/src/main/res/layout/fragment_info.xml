<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout"
    tools:context="com.fiek.transfuzioni_gjakut.activities.InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Welcome Nurse"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/roboto"
        android:textColor="@color/blue5"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In the left side are some options"
        android:textStyle="bold"
        android:textSize="26dp"
        android:textColor="@color/blue5"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/blue5"
        android:text="If you want to register a donor, please click the opsion Register a Donor and you should fill all field that are necessary"
        android:textSize="20dp"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/blue5"
        android:text="Under the register a donoor is another options called List of Donors, here are all donors with all informations"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/blue5"
        android:text="Here is options to register a Recipient"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/blue5"
        android:text="Also is options to view all recipient"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/blue5"
        android:text="The Depoist options will show you all depoist group by blood type"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/blue5"
        android:text="After log in just you can register another admin and also another admin can view and register"
        android:textSize="20dp"/>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/blue5"
        android:text="The Log out options will redirect to log in page for nurse"
        android:textSize="20dp"/>

    </LinearLayout>


    </ScrollView>






</FrameLayout>
