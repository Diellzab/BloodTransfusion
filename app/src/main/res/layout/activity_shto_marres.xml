<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"

    android:background="@drawable/background_layout"
    tools:context="com.fiek.transfuzioni_gjakut.activities.ShtoDhurues">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backleft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/backleft"
            android:layout_marginLeft="0dp"/>

        <TextView
            android:id="@+id/titleDepoist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Add Blood Recivier"
            android:textSize="28sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/blue5"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:padding="10dp"
        android:textColor="@color/blue4"
        android:fontFamily="@font/amiko"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/add_donor_title_reciever"
        android:layout_margin="5dp"
        android:gravity="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Name"
        android:gravity="center"
        android:id="@+id/add_donor_name_reciever"
        />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Surname"
        android:gravity="center"
        android:id="@+id/add_donor_surname_reciever"
        />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/add_donor_email_reciever"
        android:hint="Email"
        android:gravity="center"
        />


    </com.google.android.material.textfield.TextInputLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blod Type"
        android:fontFamily="@font/rajdhani_light"
        android:gravity="center"
        />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_donor_radioGroup_reciever"
        android:orientation="horizontal"
        >


        <RadioButton
            android:id="@+id/Apozitiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="@font/rajdhani_light"
            android:onClick="add_donor_bloobType_onclick_method_reciever"
            android:text="A+"
            android:textSize="10dp"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/Anegativ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="@font/rajdhani_light"
            android:onClick="add_donor_bloobType_onclick_method_reciever"
            android:textSize="10dp"
            android:text="A-" />

        <RadioButton
            android:id="@+id/Bpozitiv"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/rajdhani_light"
            android:onClick="add_donor_bloobType_onclick_method_reciever"
            android:layout_weight="1"
            android:text="B+" />

        <RadioButton
            android:id="@+id/Bnegativ"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/rajdhani_light"
            android:onClick="add_donor_bloobType_onclick_method_reciever"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B-" />

        <RadioButton
            android:id="@+id/ABpozitiv"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/rajdhani_light"
            android:onClick="add_donor_bloobType_onclick_method_reciever"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AB+" />

        <RadioButton
            android:id="@+id/ABnegativ"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:fontFamily="@font/rajdhani_light"
            android:clickable="true"
            android:onClick="add_donor_bloobType_onclick_method_reciever"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AB-" />

        <RadioButton
            android:id="@+id/Opozitiv"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/rajdhani_light"
            android:onClick="add_donor_bloobType_onclick_method_reciever"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="O+" />

        <RadioButton
            android:id="@+id/Onegativ"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/rajdhani_light"
            android:onClick="add_donor_bloobType_onclick_method_reciever"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="O-" />
    </RadioGroup>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:id="@+id/add_donor_phone_reciever"
        android:hint="Phone"
        />



    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Recieived blood quantity given ML"
        android:layout_margin="5dp"
        android:id="@+id/add_donor_quantity_reciever"
        />


    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:background="@drawable/other_button"
        android:textColor="@color/blue4"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"


        android:fontFamily="@font/roboto"
        android:id="@+id/add_donor_add_btn_reciever"
        />
</LinearLayout>
